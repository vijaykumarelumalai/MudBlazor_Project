    </div>

    <!-- Light OFF -->
    <div style="text-align:center;">
        <div style="width:120px; height:120px; border-radius:50%; background-color:@(!isLightOn ? "red" : "gray"); box-shadow:@(!isLightOn ? "0 0 30px red" : "none"); transition: all 0.3s ease;"></div>

    <!-- Light OFF -->
    <div style="text-align:center;">
        <div style="width:100px; height:100px; border-radius:50%; background-color:@(!isLightOn ? "red" : "gray"); box-shadow:@(!isLightOn ? "0 0 25px red" : "none");"></div>
